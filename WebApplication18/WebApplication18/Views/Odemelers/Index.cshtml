@model IEnumerable<WebApplication18.Models.Odemeler>

@{
    ViewData["Title"] = "Index";
}

<h1>Odemeler </h1>

<p>
    <a class=" btn btn-primary " asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">
        
        <tr>
            <th>
                Miktar
            </th>
            <th>
                Ödeme Yöntemi
            </th>
            <th>
                Ödeme Tarihi
            </th>
            <th>
                Rezervasyon
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Miktar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OdemeYontemi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OdemeTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rezervasyon.RezervasyonId)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.OdemeId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.OdemeId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.OdemeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet"
      href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tbllist').DataTable({
        });
    });
</script>