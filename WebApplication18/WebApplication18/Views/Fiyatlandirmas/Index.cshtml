@model IEnumerable<WebApplication18.Models.Fiyatlandirma>

@{
    ViewData["Title"] = "Index";
}

<h1>Fiyatlandırma </h1>

<p>
    <a class=" btn btn-primary " asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                Park Yeri Tipi
            </th>
            <th>
                Saatlik Fiyat
            </th>
            <th>
                Günlük Fiyat
            </th>
            <th>
                Aylık Fiyat
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParkYeriTipi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaatlikFiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GünlükFiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AylıkFiyat)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.FiyatlandirmaId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.FiyatlandirmaId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.FiyatlandirmaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet"
      href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tbllist').DataTable({
        });
    });
</script>