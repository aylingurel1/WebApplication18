@model WebApplication18.Models.ParkYerleri

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ParkYerleri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParkYeriId" />
            <div class="form-group">
                <label asp-for="ParkYeriNumarasi" class="control-label"></label>
                <input asp-for="ParkYeriNumarasi" class="form-control" />
                <span asp-validation-for="ParkYeriNumarasi" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DolulukDurumu" /> @Html.DisplayNameFor(model => model.DolulukDurumu)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Konum" class="control-label"></label>
                <input asp-for="Konum" class="form-control" />
                <span asp-validation-for="Konum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tip" class="control-label"></label>
                <input asp-for="Tip" class="form-control" />
                <span asp-validation-for="Tip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
