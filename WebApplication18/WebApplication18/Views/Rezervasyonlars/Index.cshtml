@model IEnumerable<WebApplication18.Models.Rezervasyonlar>

@{
    ViewData["Title"] = "Index";
}

<h1>Rezervasyonlar </h1>

<p>
    <a class=" btn btn-primary " asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                Başlangıç Zamanı


            </th>
            <th>
                Bitiş Zamanı
            </th>
            <th>
                Durum
            </th>
            <th>
                Kullanıcı
            </th>
            <th>
                ParkYeri
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BaslangicZamani)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BitisZamani)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kullanici.KullaniciAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkYeri.ParkYeriId)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.RezervasyonId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.RezervasyonId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RezervasyonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet"
      href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tbllist').DataTable({
        });
    });
</script>