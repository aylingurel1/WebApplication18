@model IEnumerable<WebApplication18.Models.Araclar>

@{
    ViewData["Title"] = "Index";
}

<h1>Araclar</h1>

<p>
    <a class=" btn btn-primary " asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                Plaka
            </th>
            <th>
                Marka
            </th>
            <th>
                Model
            </th>
            <th>
                Renk
            </th>
            <th>
                Araç Sahibi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Plaka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marka)
            </td>
            <td>
                    <img src="@Url.Content(@item.Model)" alt="Ürün görseli" height="100" width="200" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Renk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kullanici.KullaniciAdi)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AracId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.AracId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AracId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet"
      href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tbllist').DataTable({
        });
    });
</script>